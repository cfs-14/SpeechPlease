<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@drawable/gradientbackground1"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/imageword"
        android:layout_width="175sp"
        android:layout_height="150sp"
        android:layout_below="@id/word"
        android:layout_marginTop="50sp"
        android:maxWidth="140sp"
        android:maxHeight="140sp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/loading_image"
        android:background="@drawable/myimageborder"
        android:padding="2sp"
        />
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageword"
        android:layout_centerHorizontal="true"
        android:paddingTop="15sp"
        android:text="@string/app_name"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        />
    <Button
        android:id="@+id/btnWordsPractice"
        android:layout_below="@id/appName"
        android:layout_width="175sp"
        android:layout_height="70sp"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="35sp"
        android:layout_centerHorizontal="true"
        android:text="Words"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        />
    <Button
        android:id="@+id/btnPhrasesPractice"
        android:layout_below="@id/btnWordsPractice"
        android:layout_width="175sp"
        android:layout_height="72sp"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="15sp"
        android:layout_centerHorizontal="true"
        android:text="Phrases"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        />

</RelativeLayout>